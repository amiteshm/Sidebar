                <!--android:layout_gravity="center_horizontal"-->
                <!--android:layout_marginLeft="@dimen/secondary_text_right_left_padding"-->
                <!--android:layout_marginBottom="@dimen/secondary_text_bottom_padding"-->
                <!--android:text="Coming soon"-->
                <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
                <!--android:textColor="@color/secondary_text_color"-->
                <!--android:textSize="@dimen/secondary_text_size" />-->

            <!--<ImageView-->
                <!--android:id="@+id/go_btn"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_below="@id/city_img_thumbnail"-->
                <!--android:layout_marginTop="@dimen/primary_text_left_right_padding"-->
                <!--android:layout_marginRight="@dimen/primary_text_left_right_padding"-->
                <!--android:src="@drawable/ic_arrow_forward" />-->

            <Button
                android:id="@+id/city_info_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/city_img_thumbnail"
                android:paddingLeft="@dimen/std_padding"
                android:paddingRight="@dimen/std_padding"
                android:layout_margin="@dimen/button_margin"
                android:textColor="@color/secondary_text_color"
                android:background="@drawable/button_tag"
                android:text="Coming Soon"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

