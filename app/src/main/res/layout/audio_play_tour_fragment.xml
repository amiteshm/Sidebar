<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/play_tour_audioController"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/audioController_exitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/stop_tour_btn"
            android:contentDescription="@string/close_tour"
            android:minHeight="0dp"
            android:minWidth="0dp" />

        <ImageView
            android:id="@+id/audioController_playBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginBetween_playAndCloseTourButton"
            android:layout_marginStart="@dimen/marginBetween_playAndCloseTourButton"
            android:background="@drawable/play_rounded_btn"
            android:contentDescription="@string/play"
            android:minHeight="0dp"
            android:minWidth="0dp" />


        <ImageView
            android:id="@+id/audioController_pauseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginBetween_playAndCloseTourButton"
            android:layout_marginStart="@dimen/marginBetween_playAndCloseTourButton"
            android:background="@drawable/pause_rounded_btn"
